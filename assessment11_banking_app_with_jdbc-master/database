CREATE TABLE CUSTOMER (
    customer_id VARCHAR(20) PRIMARY KEY,
    name VARCHAR(100),
    email VARCHAR(100),
    phone VARCHAR(15),
    dob DATE
);

CREATE TABLE ACCOUNT (
    account_no VARCHAR(20) PRIMARY KEY,
    customer_id VARCHAR(20),
    account_type VARCHAR(20),
    balance DECIMAL(15,2),
    FOREIGN KEY (customer_id) REFERENCES CUSTOMER(customer_id)
);

CREATE TABLE TRANSACTION (
    txn_id VARCHAR(20) PRIMARY KEY,
    account_no VARCHAR(20),
    txn_type VARCHAR(20),
    amount DECIMAL(15,2),
    timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (account_no) REFERENCES ACCOUNT(account_no)
);


ALTER TABLE CUSTOMER ALTER COLUMN customer_id TYPE VARCHAR(50);
ALTER TABLE ACCOUNT ALTER COLUMN account_no TYPE VARCHAR(50);
ALTER TABLE TRANSACTION ALTER COLUMN txn_id TYPE VARCHAR(50);
ALTER TABLE TRANSACTION ALTER COLUMN account_no TYPE VARCHAR(50);
